---
# yamllint configuration for Ansible playbooks
extends: default

rules:
  line-length:
    max: 200
    level: warning

  indentation:
    spaces: 2
    indent-sequences: true

  comments:
    min-spaces-from-content: 1

  comments-indentation: {}

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

  braces:
    max-spaces-inside: 1

  brackets:
    max-spaces-inside: 1

  # Ignore long lines in certain cases
  document-start: disable
  

ignore: |
  .github/
  .venv/
  venv/
  .vagrant/
  molecule/
  *.md
