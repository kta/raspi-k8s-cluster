---
# ansible-lint configuration
skip_list:
  - yaml[line-length]  # Allow long lines in some cases
  - command-instead-of-module  # We use shell scripts intentionally
  - command-instead-of-shell  # We need shell for complex commands
  - risky-shell-pipe  # Our scripts handle errors appropriately
  - no-changed-when  # Some commands are intentionally marked as changed
  - package-latest  # Version pinning handled in variables

exclude_paths:
  - molecule/
  - .github/
  - .vagrant/
  - inventory/vagrant/

warn_list:
  - experimental
  - no-handler

# Enable specific rules
enable_list:
  - yaml
  - args
  - name[casing]
  - name[missing]

# Use default profile
profile: moderate
